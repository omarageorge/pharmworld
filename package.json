{
  "name": "pharmworld_backend",
  "version": "1.0.0",
  "description": "Pharmworld backend restful api",
  "main": "server.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "build": "cd frontend && yarn build",
